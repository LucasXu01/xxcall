<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lib_ui_bg_f5f8fa_radius_22"
    android:layout_marginHorizontal="15dp"
    android:layout_height="52dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingHorizontal="8dp"
    android:layout_marginTop="6dp"
    android:id="@+id/root"
    >

    <ImageView
        android:id="@+id/imgdianhua"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/dainhuabu"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgdianhua"
        />


    <ImageView
        android:id="@+id/img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:src="@drawable/lib_ui_ic_general_right_arrow1"
        />

    <TextView
        android:id="@+id/xiugai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginRight="8dp"
        android:text="修改"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

</RelativeLayout>
