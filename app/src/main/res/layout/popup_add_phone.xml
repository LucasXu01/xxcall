<!-- popup_normal.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_ui_bg_f5f8fa_radius_22"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box_head"
        >

        <Button
            android:id="@+id/button_select_file"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="导入excel文件(必须.xls文件)"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="8dp"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/tips"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re"
        >

        <Button
            android:id="@+id/button_add_from_clipboard"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="导入剪切板"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="8dp"
            android:textAllCaps="false"
            android:layout_toLeftOf="@+id/img2"

            />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/tips"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re"
        >

        <Button
            android:id="@+id/button_add_from_input"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="手动输入"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="8dp"
            android:textAllCaps="false"

            />
    </RelativeLayout>

    <!-- 添加更多需要的视图 -->

</LinearLayout>
